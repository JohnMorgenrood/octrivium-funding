# Database
DATABASE_URL="postgresql://username:password@localhost:5432/octrivium_funding?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@octriviumfunding.com"

# PayPal Payment Gateway
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_API_URL="https://api-m.sandbox.paypal.com"
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your-paypal-client-id"
# For production use: https://api-m.paypal.com

# Yoco Payment Gateway (South Africa)
NEXT_PUBLIC_YOCO_PUBLIC_KEY="pk_live_yourPublicKey123456"
YOCO_SECRET_KEY="sk_live_yourSecretKey123456"
# Get your keys from: https://portal.yoco.com/online/settings/api-keys

# Payment Gateway (Example: PayFast for South Africa)
PAYFAST_MERCHANT_ID="your-merchant-id"
PAYFAST_MERCHANT_KEY="your-merchant-key"
PAYFAST_PASSPHRASE="your-passphrase"
PAYFAST_MODE="sandbox" # or "live"

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760 # 10MB in bytes

# App Config
NEXT_PUBLIC_APP_NAME="Octrivium Funding"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_MIN_INVESTMENT=100
NEXT_PUBLIC_REVENUE_SHARE_MULTIPLIER=1.7
